<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Material">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/uwPurple</item>
        <item name="colorPrimaryDark">@color/uwGold</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">?android:colorPrimary</item>
    </style>

    <style name="TextStyle.Label">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Gold" parent="TextStyle.Label">
        <item name="android:background">?android:colorPrimaryDark</item>
        <item name="android:textColor">@color/label</item>
    </style>

    <style name="Button" parent="@android:style/MediaButton">
        <item name="android:textSize">22sp</item>
    </style>

</resources>
